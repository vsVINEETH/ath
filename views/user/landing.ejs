<div class="container-fluid mt-5 mb-5">
    <div class="row justify-content-evenly">
        <% const displayedCategories = {};  %>
        <% productData.forEach((element,index) => { %>
            <% if (!displayedCategories[element.category.category_name]) { %>
                <% displayedCategories[element.category.category_name] = true; %>
            
        <div class="card mx-2 my-2" style="width: 18rem;">      
            <img src="/uploads/<%= element.image[0] %>" class="card-img-top mt-2" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= element.category.category_name %></h5>
                <p class="card-text"><%= element.description %></p>
                <a href="/login" class="btn btn-outline-dark">Shop now</a>
            </div>
        </div>
          <% } %>
        <% }) %>
    </div>    
</div>


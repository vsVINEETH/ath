<%- include('header') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
      <%- include('nav-side') %>
    <!-- Main content -->
    <div class="col-md-10">
      <div class="container-fluid">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="page">Coupons</h1>
        </div>

        <div class="row">
          <div class="col">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item">
                  <a href="/admin/admin_dashboard" style="text-decoration: none;">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Coupons</li>
              </ol>
            </nav>
          </div>
          
         
          <div class="col-md-3 mb-3">
            <div class="input-group">
              <input type="text" class="form-control form-control-sm rounded me-3" placeholder="Search..." disabled style="opacity: 0;">
              <a href="/admin/add_coupon"><button class="btn btn-sm btn-secondary" type="button">+add</button></a>
            </div>
          </div>
        </div>



        <div class="table-responsive" >
          <!-- <div style="max-height: 500px; overflow-y: auto;"> -->
          <table id="example" class="table table-striped table-sm  justify-content-center border">
            <thead class="text-center">
              <tr>
                <th scope="col" class="border">ID</th>
                <th scope="col" class="border">Coupon Code</th>
                <th scope="col" class="border">Discount percentage</th>
                <th scope="col" class="border">Expiary Date</th>
                <th scope="col" class="border">Status</th>
                <th scope="col" class="border">Action</th>
              </tr>
            </thead>
            <tbody >
                <% couponData.forEach((element, index) => { %>
                    <tr class="align-middle text-center">
                      <td class="border"><%= index +1 %></td>
                      <td class="border"><%= element.coupon_code %></td>
                      <td class="border"><%= element.discount_percentage %></td>
                      <td class="border"><%= element.expire_date.toLocaleDateString() %></td>
                      <td class="border"><%= element.status %></td>
                      <td class="border"><a href="/admin/coupon_action/<%= element._id %>" style="text-decoration: none;"> 
                        <% if (element.status == 'active' && element.status !== "expired" ) { %>
                          <button class="btn  btn-sm btn-danger">Deactivate</button>
                        <% } else if (element.status == "deactive" && element.status !== "expired" ) { %>
                          <button class="btn  btn-sm btn-primary">Activate</button>
                          </a>
                        <% } %>
                         <a href="/admin/delete_coupon/<%= element._id %>" style="text-decoration: none;">
                        <button class="btn  btn-sm btn-secondary">Delete</button>
                          </a>
                      </td>
                    </tr>
                    <% }) %>
            </tbody>
          </table>
        <!-- </div> -->
        </div>

      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script src="https://cdn.datatables.net/v/bs5/dt-1.13.8/datatables.min.js"></script>  
<script>
   new DataTable('#example');
</script>


